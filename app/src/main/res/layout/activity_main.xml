<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="team.child.childmonitoring.MainActivity"
    android:background="@drawable/background"
    android:padding="15dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/text"
            android:id="@+id/imageView" />

        <EditText
            android:background="@drawable/edit_text_background"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:id="@+id/login_email"
            android:hint="email"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_marginStart="13dp"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="120dp" />
        <EditText
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/edit_text_background"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:hint="password"
            android:inputType="textPassword"
            android:gravity="center"
            android:textAlignment="center"
            android:id="@+id/login_password"
            android:layout_below="@+id/login_email"
            android:layout_alignStart="@+id/login_email"
            android:layout_marginTop="17dp" />
        <Button
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Log in"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="17sp"
            android:id="@+id/login_btn"
            android:background="@drawable/btn_login_background"
            android:textColor="#fff"
            android:layout_marginTop="19dp"
            android:layout_below="@+id/login_password"
            android:layout_alignStart="@+id/login_password" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="Forgot Password  |"
            android:textStyle="bold"
            android:textSize="14sp"
            android:id="@+id/forgot_password"
            android:layout_marginTop="13dp"
            android:layout_marginStart="13dp"
            android:layout_below="@+id/login_btn"
            android:layout_alignStart="@+id/login_btn" />
        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:layout_marginLeft="10dp"
            android:textColor="#fff"
            android:id="@+id/create_Account"
            android:layout_alignBaseline="@+id/forgot_password"
            android:layout_alignBottom="@+id/forgot_password"
            android:layout_toEndOf="@+id/forgot_password" />
    </RelativeLayout>



</RelativeLayout>
